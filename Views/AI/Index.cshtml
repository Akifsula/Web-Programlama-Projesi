@model KuaforYonetim.ViewModels.AIHairRecommendationViewModel


<h2>Yapay Zeka Saç Önerisi</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<form method="post" asp-action="AnalyzeImage">
    <div class="form-group">
        <label for="imageUrl">Resim URL'si</label>
        <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="Resim URL'si giriniz" required>
    </div>
    <div class="form-group">
        <label for="editingType">Düzenleme Türü</label>
        <select class="form-control" id="editingType" name="editingType">
            <option value="both">Her İkisi</option>
            <option value="hairstyle">Saç Stili</option>
            <option value="color">Renk</option>
        </select>
    </div>
    <div class="form-group">
        <label for="colorDescription">Renk Açıklaması</label>
        <input type="text" class="form-control" id="colorDescription" name="colorDescription" placeholder="Örn: Sarı, Kızıl" required>
    </div>
    <div class="form-group">
        <label for="hairstyleDescription">Saç Stili Açıklaması</label>
        <input type="text" class="form-control" id="hairstyleDescription" name="hairstyleDescription" placeholder="Örn: Bob Kesim, Mohawk" required>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

     