@model KuaforYonetim.ViewModels.AIHairRecommendationViewModel

@{
    ViewData["Title"] = "AI Önerileri";
}

<h2>AI Tarafından Önerilen Saç Modelleri ve Renkler</h2>

<div>
    <h4>Orijinal Fotoğraf</h4>
    <img src="@(!string.IsNullOrEmpty(Model.OriginalImageUrl) ? Model.OriginalImageUrl : "/images/placeholder.jpg")"
         alt="Orijinal Fotoğraf"
         style="max-width: 100%; height: auto;" />
</div>

<div>
    <h4>İşlenmiş Fotoğraf</h4>
    <img src="@(!string.IsNullOrEmpty(Model.ProcessedImageUrl) ? Model.ProcessedImageUrl : "/images/placeholder.jpg")"
         alt="İşlenmiş Fotoğraf"
         style="max-width: 100%; height: auto;" />
</div>

<div>
    <h4>Öneriler</h4>
    <p>@Model.Suggestions</p>
</div>

<a href="/AI/Index" class="btn btn-primary mt-3">Başka Bir Fotoğraf Yükle</a>
