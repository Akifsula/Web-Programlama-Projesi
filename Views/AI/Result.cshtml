@model KuaforYonetim.ViewModels.AIHairRecommendationViewModel

@{
    ViewData["Title"] = "Sonuçlar";
    string processedImageUrl = ViewData["ProcessedImageUrl"] as string;
}

<h2>İşlenmiş Resim</h2>
@if (!string.IsNullOrEmpty(processedImageUrl))
{
    <div>
        <img src="@processedImageUrl" alt="İşlenmiş Resim" style="max-width: 100%; height: auto;" />
    </div>
}
else
{
    <p>Sonuç bulunamadı.</p>
}

<a href="/AI/Index" class="btn btn-primary mt-3">Başka Bir Resim Yükle</a>

