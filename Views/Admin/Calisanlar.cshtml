@model IEnumerable<KuaforYonetim.Models.Calisan>

<h2>Çalışanlar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanları</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.AdSoyad</td>
                <td>@calisan.UzmanlikAlanlari</td>
                <td>
                    <a class="btn btn-danger" asp-action="CalisanSil" asp-route-id="@calisan.CalisanId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="/Admin/CalisanEkle">Yeni Çalışan Ekle</a>