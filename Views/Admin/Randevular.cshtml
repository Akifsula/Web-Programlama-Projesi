@model IEnumerable<KuaforYonetim.Models.Randevu>

<h2>Randevular</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Çalışan</th>
            <th>Hizmet</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Tarih.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@randevu.Calisan.AdSoyad</td>
                <td>@randevu.Hizmet.Ad</td>
                <td>
                    <a class="btn btn-success" asp-action="Onayla" asp-route-id="@randevu.RandevuId">Onayla</a>
                    <a class="btn btn-danger" asp-action="Reddet" asp-route-id="@randevu.RandevuId">Reddet</a>
                </td>
            </tr>
        }
    </tbody>
</table>