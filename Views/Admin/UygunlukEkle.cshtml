@model KuaforYonetim.Models.CalisanUygunluk

<h2>Uygunluk Ekle</h2>

<form asp-action="UygunlukEkle" method="post">
    <input type="hidden" asp-for="CalisanId" id="CalisanId" value="@ViewBag.CalisanId" />

    <div class="form-group">
        <label for="Gun">Gün</label>
        <select asp-for="Gun" id="Gun" class="form-control">
            <option value="0">Pazar</option>
            <option value="1">Pazartesi</option>
            <option value="2">Salı</option>
            <option value="3">Çarşamba</option>
            <option value="4">Perşembe</option>
            <option value="5">Cuma</option>
            <option value="6">Cumartesi</option>
        </select>
        <span asp-validation-for="Gun" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BaslangicSaati">Başlangıç Saati</label>
        <input type="time" asp-for="BaslangicSaati" id="BaslangicSaati" class="form-control" />
        <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BitisSaati">Bitiş Saati</label>
        <input type="time" asp-for="BitisSaati" id="BitisSaati" class="form-control" />
        <span asp-validation-for="BitisSaati" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
