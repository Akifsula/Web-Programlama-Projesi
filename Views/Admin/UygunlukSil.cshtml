
@{
}
@model KuaforYonetim.Models.CalisanUygunluk

<h2>Uygunluk Sil</h2>

<p>Bu uygunluğu silmek istediğinizden emin misiniz?</p>
<p><strong>@Model.Gun</strong>: @Model.BaslangicSaati - @Model.BitisSaati</p>

<form asp-action="UygunlukSil" method="post">
    <input type="hidden" asp-for="UygunlukId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Uygunluklar" asp-route-calisanId="@Model.CalisanId" class="btn btn-secondary">Hayır, İptal</a>
</form>
