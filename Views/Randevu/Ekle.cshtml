@model KuaforYonetim.Models.Randevu

<h2>Yeni Randevu Al</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <select asp-for="CalisanId" asp-items="@(new SelectList(ViewBag.Calisanlar, "CalisanId", "AdSoyad"))" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label for="HizmetId">Hizmet</label>
        <select asp-for="HizmetId" asp-items="@(new SelectList(ViewBag.Hizmetler, "HizmetId", "Ad"))" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Tarih">Tarih</label>
        <input asp-for="Tarih" type="datetime-local" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Randevu Al</button>
</form>