@model KuaforYonetim.Models.Randevu

<h2>Randevu Al</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    TempData["ErrorMessage"] = null;
    <!-- Mesajın tekrarlamasını önler -->
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <select asp-for="CalisanId" asp-items="@(new SelectList(ViewBag.Calisanlar, "CalisanId", "AdSoyad"))" class="form-control" required>
            <option value="">Çalışan Seçiniz</option>
        </select>
    </div>

    <div class="form-group">
        <label for="HizmetId">Hizmet</label>
        <select asp-for="HizmetId" asp-items="@(new SelectList(ViewBag.Hizmetler, "HizmetId", "Ad"))" class="form-control" required>
            <option value="">Hizmet Seçiniz</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Tarih">Tarih ve Saat</label>
        <input asp-for="Tarih" type="datetime-local" class="form-control" id="Tarih" required step="3600" />
        <!-- step="3600" yalnızca saatlik aralıklara izin verir -->
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Dolu zamanları JSON formatında al
        var doluZamanlar = @Html.Raw(Json.Serialize(ViewBag.DoluZamanlar));
        var tarihInput = document.getElementById('Tarih');

        tarihInput.addEventListener('change', function () {
            var secilenTarih = new Date(this.value);

            // Tarih çakışmasını kontrol et
            if (doluZamanlar.some(zaman => new Date(zaman).getTime() === secilenTarih.getTime())) {
                alert('Bu tarih ve saat dolu. Lütfen başka bir zaman seçin.');
                this.value = '';
            }
        });
    });
</script>  