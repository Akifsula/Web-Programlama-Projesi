@model KuaforYonetim.Models.Randevu

<h2>Yeni Randevu Al</h2>

<form asp-action="Ekle" method="post">
    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <select asp-for="CalisanId" asp-items="@(new SelectList(ViewBag.Calisanlar, "CalisanId", "AdSoyad"))" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label for="HizmetId">Hizmet</label>
        <select asp-for="HizmetId" asp-items="@(new SelectList(ViewBag.Hizmetler, "HizmetId", "Ad"))" class="form-control">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Tarih">Tarih</label>
        <input asp-for="Tarih" type="datetime-local" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Randevu Al</button>
</form>


<script>
    var doluZamanlar = @Html.Raw(Json.Serialize(ViewBag.DoluZamanlar));
    document.getElementById('Tarih').addEventListener('change', function() {
        var secilenTarih = new Date(this.value);
        if (doluZamanlar.some(zaman => new Date(zaman).getTime() === secilenTarih.getTime())) {
            alert('Bu tarih ve saat dolu. Lütfen başka bir zaman seçin.');
            this.value = '';
        }
    });
</script>

